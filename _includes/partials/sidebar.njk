<button id="menu-toggle-btn" class="trans p-2">
<i class="fas fa-bars"></i>
</button>

<section id="sidebar-container">
<div id="sidebar-menu">

<div class="mb-3 p-3">
<link href="/pagefind/pagefinds-ui.css" rel="stylesheet">
<script src="/pagefind/pagefind-ui.js"></script>
<div id="search"></div>
<script>
    window.addEventListener('DOMContentLoaded', (event) => {
        new PagefindUI({ element: "#search", showSubResults: true });
    });
</script>
</div>

<div class="p-3 bg-light"> 
		
<h5 class="mb-4"><span class="bgb-pink p-1">{{metadata.sidebar.menu.title}}</span></h5>
<ul class="nav flex-column mb-5">
{% for n in metadata.sidebar.menu.list %}<li class="nav-item border-bottom mt-1 mb-1"><a href="{{n.url}}" class="nav-link text-uppercase smalls text-secondary">{{n.nav}}</a></li>{% endfor %}
</ul>

<div class="border-bottom">
<h5 class="mt-3 mb-5"><span class="bgb-pink p-1">{{metadata.sidebar.info.title}}</span></h5>
{% for i in metadata.sidebar.info.list %}<div class="mb-3">
<a href="{{i.url}}"><img class="img-fluid mb-3 rounded" alt="{{i.title}}" width="100%" height="100%" src="{{i.image}}"/></a>
<p class="smaller">{{i.text}}</p>
</div>{% endfor %}
<p><a href="{{metadata.sidebar.info.button.url}}" class="btn btn-s, btn-pink text-uppercase">{{metadata.sidebar.info.button.text}}</a></p>
</div>
			
<div class="smaller">
<h5 class="mt-3 mb-5"><span class="bgb-pink p-1">{{metadata.sidebar.contact.title}}</span></h5>
<p>
{{metadata.sidebar.contact.text}}
</p>
{% for c in metadata.sidebar.contact.list %}<p class="mb-3">
<i class="{{c.icon}} me-3 text-pink"></i>{% if c.url %}<a href="{{c.url}}">{{c.title}}</a>{% else %}{{c.title}}{% endif %}</p><hr/>{% endfor %}
</div>
			
<div class="mt-5">
<p class="smallers">
{{metadata.sidebar.footer.text}} | Built with <a href="https://www.11ty.dev/" target="blank">{{ eleventy.generator }}</a> |
Develope by <a href="https://adamdjbrett.com" target="_blank">Adamdjbrett</a>
</p>
</div>

</div>
</div>
</section>