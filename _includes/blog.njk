---
layout: base.njk
---
{% include "partials/nav_desktop.njk" %}
<div class="container-fluid">
<div class="col-md-12 p-3  p-md-5">
<h3><strong><span class="bgb-pink">{{title}}</span></strong></h3>
</div>
<div class="row mt-3 mb-3">
{% for b in pagination.items | reverse %}
<div class="col-md-6 col-lg-4 p-3 small p-md-5"> 
<div class="img-zoom-container">
<a href="{{b.url}}" title="{{b.data.title}}"><img class="img-post rounded" width="100%" height="100%" alt="{{b.data.title}}" src="{{b.data.image or metadata.image}}"/></a>
</div>
<h3>{{b.data.title}}</h3>
<p>
{{b.data.description}}
</p>
<p><a href="{{b.url}}" class="btn btn-sm btn-pink p-2">
Learn More
</a></p>
</div>
{% endfor %}
</div>
<div class="row col-md-12">
<div class="col-md-6 p-3">
{% if pagination.href.previous %}<a class="btn btn-lg btn-pink text-white col-6" href="{{ pagination.href.previous }}">Prev </a>{% endif %}
</div>
<div class="col-md-6 text-end p-3">
{% if pagination.href.next %}<a class="btn btn-lg btn-pink text-white col-6" href="{{ pagination.href.next }}">Next </a>{% endif %}
</div>
</div>
</div>
