---
layout: base.njk
---
<div class="col-md-10 mx-auto">
{% include "partials/nav_desktop.njk" %}
<div class="container-fluid">
<div class="col-md-12 p-3  p-md-5">
{% set authorKey = page.fileSlug %}
{% set postsByAuthor = collections.all | byAuthor(authorKey) %}
{% if postsByAuthor.length %}
<!-- <h3>Post Article by {{title}} ({{ postsByAuthor.length }})</h3> -->
<div class="text-center text-secondary">
<img class="img-thumb rounded-circle mb-3" alt="{{title}}" width="150" height="150" 
style="object-fit:cover;" src="{{image}}"/>
<h1><strong><span class="none text-dark">{{title}}</span></strong></h1>
<h2 class="lead text-uppercase mb-3">{{description}}</h2>
<p>
{{ postsByAuthor.length }} Posts |
{% if social %}{% for s in social %}
<a href="{{s.url}}" title="{{s.title}}"><i class="{{s.icon}} me-2"></i></a>
{% endfor %}{% endif %}
</p>
<p>{% for b in button %}<a href="{{b.url}}" class="btn btn-pink me-2 text-white">
{{b.title}}</a>{% endfor %}
</p>
</div>
</div>
<hr/>
<div class="row mb-3">
{% for b in postsByAuthor | reverse %}
<div class="col-md-4 col-lg-4 p-3 small p-md-5"> 
<div class="img-zoom-container">
<a href="{{b.url}}" title="{{b.data.title}}"><img class="img-post rounded" width="100%" height="100%" alt="{{b.data.title}}" src="{{b.data.image or metadata.image}}"/></a>
</div>
<h3>{{b.data.title}}</h3>
<p>
{{b.data.description}}
</p>
<p><a href="{{b.url}}" class="btn btn-sm btn-pink p-2">
Learn More
</a></p>
</div>
{% endfor %}
{% else %}
<p>Nothing Post by **{{ authorKey }}**.</p>
{% endif %}
</div>
</div>
</div>